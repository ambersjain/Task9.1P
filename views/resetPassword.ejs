<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Sign Up</title>
    <meta name="name" content="Registration Form">
    <link rel="stylesheet" href="css/styles.css?v=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <h2>Reset your password now.</h2>
</head>

<body>
    <div class="row">
        <div class="container">
            <form action="/reset/<%= token %>" method="POST">
                <legend>Type your new Password</legend>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" placeholder="New Password" autofocus class="form-control">
                </div>
                <div class="form-group">
                    <label for="confirmpassword">Retype Password</label>
                    <input type="password" name="confirmpassword" placeholder="Confirm New Password" autofocus class="form-control">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Update Password">
                </div>
            </form>
        </div>
    </div>

</body>


</html>